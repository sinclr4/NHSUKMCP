{
  "name": "@nhs/organizations-mcp-server",
  "version": "1.0.0",
  "description": "Model Context Protocol server for searching NHS organizations by type and location",
  "type": "module",
  "bin": {
    "nhs-orgs-mcp": "./bin/server.js"
  },
  "scripts": {
    "postinstall": "node ./scripts/setup.js",
    "test": "node ./bin/server.js --test"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "nhs",
    "healthcare",
    "claude",
    "ai"
  ],
  "author": "Rob Sinclair <rob.sinclair@nhschoices.net>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/nhs-organizations-mcp"
  },
  "homepage": "https://github.com/yourusername/nhs-organizations-mcp#readme",
  "bugs": {
    "url": "https://github.com/yourusername/nhs-organizations-mcp/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "bin/",
    "scripts/",
    "README.md",
    "LICENSE"
  ],
  "os": [
    "darwin",
    "linux",
    "win32"
  ],
  "cpu": [
    "x64",
    "arm64"
  ],
  "mcp": {
    "serverType": "stdio",
    "configExample": {
      "command": "npx",
      "args": ["-y", "@nhs/organizations-mcp-server"],
      "env": {
        "AZURE_SEARCH_ENDPOINT": "https://your-search.search.windows.net",
        "AZURE_SEARCH_API_KEY": "your-api-key",
        "AZURE_SEARCH_POSTCODE_INDEX": "postcode-index-name",
        "AZURE_SEARCH_SERVICE_INDEX": "service-index-name"
      }
    }
  }
}
